@model IEnumerable<TTTN_WEB_ASP.Models.EF.Product>

@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        var strImage = "";
        var img=item.ProductImage.FirstOrDefault(x => x.IsDefault);
        if (img != null)
        {
            strImage = img.Image;
        }
        <!-- Product 1 -->

        <div class="product-item @item.ProductCategory.Alias">
            <div class="product discount product_filter">
                <div class="product_imagea">
                    <img src="@strImage" alt="@item.Title">
                </div>
                <div class="favorite favorite_left"></div>
                <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-$20</span></div>
                <div class="product_info">
                    <span class="product_name"><a href="/chi-tiet/@item.Alias-p@(item.Id)">@item.Title</a></span>
                    @if (item.PriceSale > 0)
                    {
                        <div class="product_price">@TTTN_WEB_ASP.Common.Common.FormatNumber(item.Price, 0)<span>@TTTN_WEB_ASP.Common.Common.FormatNumber(item.PriceSale, 0)</span></div>
                    }
                    else
                    {
                        <div class="product_price">@TTTN_WEB_ASP.Common.Common.FormatNumber(item.Price, 0)</div>
                    }

                </div>
                <div class="red_button add_to_cart_button"><a class="btnAddToCart" data-id="@item.Id" href="#">Thêm vào giỏ hàng</a></div>
            </div>
           
        </div>
    }
} 