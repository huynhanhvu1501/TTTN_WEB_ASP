

@{
    ViewBag.Title = "Giỏ hàng";
}


<link rel="stylesheet" type="text/css" href="~/Content/assets/css/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/css/categories_responsive.css">
<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">
            <!-- Breadcrumbs -->
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/">Trang chủ</a></li>
                    <li class="active"><a ><i class="fa fa-angle-right" aria-hidden="true"></i>Giỏ hàng</a></li>
                </ul>
            </div>
            <!-- Sidebar -->
            <div class="row">
                <div class="col-md-12" id="load_data">
                    @Html.Action("Partial_Item_Cart", "ShoppingCart")
                </div>
                <div class="col-md-12">
                    @if (ViewBag.Ckeckcart1 != null)
                    {
                        <div class="text-right">
                            <a href="" class="btn btn-danger btnDeleteAll">Xóa tất cả</a>
                            <a href="/thanh-toan" class="btn btn-info">Thanh toán</a>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</div>
@section scripts{
    <script src="~/Content/assets/js/categories_custom.js"></script>
}